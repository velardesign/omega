generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id            String    @id
  name          String    @db.Text
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?   @db.Text
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?  @db.Text
  userAgent String?  @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String    @db.Text
  providerId            String    @db.Text
  userId                String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  idToken               String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?   @db.Text
  password              String?   @db.Text
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String   @db.Text
  value      String   @db.Text
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier(length: 191)])
  @@map("verification")
}

model Cliente {
  id         String            @id @default(uuid())
  nome       String
  sobrenome  String
  cod        String            @unique
  contatos   Contato[]
  documentos Documento[]
  enderecos  EnderecoCliente[]
  vendas     Venda[]

  @@map("cliente")
}

model Documento {
  id        String    @id @default(uuid())
  nome      String
  numero    String
  validade  DateTime?
  clienteId String
  cliente   Cliente   @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@index([clienteId], map: "documento_clienteId_fkey")
  @@map("documento")
}

model EnderecoCliente {
  id         String  @id @default(uuid())
  logradouro String
  numero     String
  bairro     String
  cidade     String
  pais       String
  cep        String
  clienteId  String
  cliente    Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@index([clienteId], map: "endereco_clienteId_fkey")
  @@map("endereco_cliente")
}

model Contato {
  id           String      @id @default(uuid())
  tipo         String
  conteudo     String
  clienteId    String?
  cliente      Cliente?    @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  fornecedorId String?
  fornecedor   Fornecedor? @relation(fields: [fornecedorId], references: [id])

  @@index([clienteId], map: "contato_clienteId_fkey")
  @@map("contato")
}

model Caixa {
  id         String      @id @default(uuid())
  abertura   Abertura?   @relation("CaixaAbertura")
  entradas   Entrada[]
  fechamento Fechamento? @relation("CaixaFechamento")
  saidas     Saida[]

  @@map("caixa")
}

enum TipoEntrada {
  CARTAO
  DINHEIRO
  PIX
  TRANSFERENCIA
}

model Entrada {
  id           String      @id @default(uuid())
  tipo         TipoEntrada
  responsavel  String
  data_hora    DateTime    @default(now())
  valor        Decimal     @db.Decimal(10, 2)
  caixa_id     String
  caixa        Caixa       @relation(fields: [caixa_id], references: [id], onDelete: Cascade)
  pagamento_id String?
  pagamento    Pagamento?  @relation(fields: [pagamento_id], references: [id], onDelete: SetNull)

  @@index([caixa_id], map: "entrada_caixa_id_fkey")
  @@map("entrada")
}

model Saida {
  id          String   @id @default(uuid())
  tipo        String
  responsavel String
  data_hora   DateTime @default(now())
  valor       Decimal  @db.Decimal(10, 2)
  caixa_id    String
  caixa       Caixa    @relation(fields: [caixa_id], references: [id], onDelete: Cascade)

  @@index([caixa_id], map: "saida_caixa_id_fkey")
  @@map("saida")
}

model Abertura {
  id          String   @id @default(uuid())
  data_hora   DateTime @default(now())
  responsavel String
  autorizacao String
  caixa_id    String   @unique
  caixa       Caixa    @relation("CaixaAbertura", fields: [caixa_id], references: [id], onDelete: Cascade)

  @@map("abertura")
}

model Fechamento {
  id          String   @id @default(uuid())
  data_hora   DateTime @default(now())
  responsavel String
  autorizacao String
  caixa_id    String   @unique
  caixa       Caixa    @relation("CaixaFechamento", fields: [caixa_id], references: [id], onDelete: Cascade)

  @@map("fechamento")
}

model Venda {
  id          String   @id @default(uuid())
  data_hora   DateTime @default(now())
  responsavel String
  cliente_id  String
  cliente     Cliente  @relation(fields: [cliente_id], references: [id], onDelete: Cascade)

  pagamentoId String      @unique
  pagamento   Pagamento   @relation(fields: [pagamentoId], references: [id])
  itensVenda  ItemVenda[]

  @@map("venda")
}

model ItemVenda {
  id          String  @id @default(uuid())
  quantidade  Decimal @db.Decimal(10, 3)
  preco_venda Decimal
  ambiente    String?
  observacao  String?

  venda_id   String
  venda      Venda   @relation(fields: [venda_id], references: [id], onDelete: Cascade)
  produto_id String
  produto    Produto @relation(fields: [produto_id], references: [id])

  @@map("item_venda")
}

model Produto {
  id             String      @id @default(uuid())
  nome           String      @unique
  codigo         String      @unique
  unidade_medida String
  material       String
  cor            String
  descricao      String
  preco_venda    Decimal?
  preco_compra   Decimal
  itens          ItemVenda[]
  categoria_id   String
  categoria      Categoria   @relation(fields: [categoria_id], references: [id])
  fornecedor_id  String
  fornecedor     Fornecedor  @relation(fields: [fornecedor_id], references: [id])

  @@map("produto")
}

model Pagamento {
  id       String    @id @default(uuid())
  entradas Entrada[]
  venda    Venda?

  @@map("pagamento")
}

model Categoria {
  id       String    @id @default(uuid())
  codigo   String    @unique
  nome     String    @unique
  produtos Produto[]

  @@map("categoria")
}

model Fornecedor {
  id                  String                    @id @default(uuid())
  codigo              String?
  razao_social        String
  nome_fantasia       String?
  observacoes         String?
  produtos            Produto[]
  contatos            Contato[]
  endereco_fornecedor EnderecoFornecedor?
  dados_comercial     DadosComercialFornecedor?

  @@map("fornecedor")
}

model EnderecoFornecedor {
  id           String     @id @default(uuid())
  logradouro   String
  numero       String
  bairro       String
  cidade       String
  pais         String
  cep          String
  fornecedorId String     @unique
  fornecedor   Fornecedor @relation(fields: [fornecedorId], references: [id], onDelete: Cascade)

  @@map("endereco_fornecedor")
}

model DadosComercialFornecedor {
  id              String     @id @default(uuid())
  codigo          String?
  prazo_pagamento Int?
  forma_pagamento String?
  banco           String?
  chave_pix       String?
  fornecedorId    String     @unique
  forecedor       Fornecedor @relation(fields: [fornecedorId], references: [id], onDelete: Cascade)

  @@map("dados_comercial_fornecedor")
}
