generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Cliente {
  id         String            @id @default(uuid())
  nome       String
  sobrenome  String
  cod        String            @unique
  contatos   ContatoCliente[]
  documentos Documento[]
  enderecos  EnderecoCliente[]
  vendas     Venda[]

  @@map("cliente")
}

model Documento {
  id        String    @id @default(uuid())
  nome      String
  numero    String
  validade  DateTime?
  clienteId String
  cliente   Cliente   @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@map("documento")
}

model EnderecoCliente {
  id         String  @id @default(uuid())
  logradouro String
  numero     String
  bairro     String
  cidade     String
  pais       String
  cep        String
  clienteId  String
  cliente    Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@map("endereco_cliente")
}

model ContatoCliente {
  id        String   @id @default(uuid())
  tipo      String
  valor     String
  clienteId String?
  cliente   Cliente? @relation(fields: [clienteId], references: [id], onDelete: Cascade)

  @@map("contato_cliente")
}

model Caixa {
  id         String      @id @default(uuid())
  abertura   Abertura?   @relation("CaixaAbertura")
  entradas   Entrada[]
  fechamento Fechamento? @relation("CaixaFechamento")
  saidas     Saida[]

  @@map("caixa")
}

model Entrada {
  id           String      @id @default(uuid())
  tipo         TipoEntrada
  responsavel  String
  data_hora    DateTime    @default(now())
  valor        Decimal     @db.Decimal(10, 2)
  caixa_id     String
  pagamento_id String?
  caixa        Caixa       @relation(fields: [caixa_id], references: [id], onDelete: Cascade)
  pagamento    Pagamento?  @relation(fields: [pagamento_id], references: [id])

  @@map("entrada")
}

model Saida {
  id          String   @id @default(uuid())
  tipo        String
  responsavel String
  data_hora   DateTime @default(now())
  valor       Decimal  @db.Decimal(10, 2)
  caixa_id    String
  caixa       Caixa    @relation(fields: [caixa_id], references: [id], onDelete: Cascade)

  @@map("saida")
}

model Abertura {
  id          String   @id @default(uuid())
  data_hora   DateTime @default(now())
  responsavel String
  autorizacao String
  caixa_id    String   @unique
  caixa       Caixa    @relation("CaixaAbertura", fields: [caixa_id], references: [id], onDelete: Cascade)

  @@map("abertura")
}

model Fechamento {
  id          String   @id @default(uuid())
  data_hora   DateTime @default(now())
  responsavel String
  autorizacao String
  caixa_id    String   @unique
  caixa       Caixa    @relation("CaixaFechamento", fields: [caixa_id], references: [id], onDelete: Cascade)

  @@map("fechamento")
}

model Venda {
  id          String      @id @default(uuid())
  data_hora   DateTime    @default(now())
  responsavel String
  cliente_id  String
  pagamentoId String      @unique
  itensVenda  ItemVenda[]
  cliente     Cliente     @relation(fields: [cliente_id], references: [id], onDelete: Cascade)
  pagamento   Pagamento   @relation(fields: [pagamentoId], references: [id])

  @@map("venda")
}

model ItemVenda {
  id          String  @id @default(uuid())
  quantidade  Decimal @db.Decimal(10, 3)
  preco_venda Decimal
  ambiente    String?
  observacao  String?
  venda_id    String
  produto_id  String
  produto     Produto @relation(fields: [produto_id], references: [id])
  venda       Venda   @relation(fields: [venda_id], references: [id], onDelete: Cascade)

  @@map("item_venda")
}

model Produto {
  id             String      @id @default(uuid())
  codigo         String      @unique
  descricao      String
  preco_venda    Decimal?
  preco_compra   Decimal
  categoria_id   String
  cor            String
  fornecedor_id  String
  material       String
  nome           String      @unique
  unidade_medida String
  itens          ItemVenda[]
  categoria      Categoria   @relation(fields: [categoria_id], references: [id])
  fornecedor     Fornecedor  @relation(fields: [fornecedor_id], references: [id])

  @@map("produto")
}

model Pagamento {
  id       String    @id @default(uuid())
  entradas Entrada[]
  venda    Venda?

  @@map("pagamento")
}

model Categoria {
  id       String    @id @default(uuid())
  codigo   String    @unique
  nome     String    @unique
  produtos Produto[]

  @@map("categoria")
}

model Fornecedor {
  id                  String                    @id @default(uuid())
  codigo              String?                   @unique
  razao_social        String                    @unique
  nome_fantasia       String?                   @unique
  observacoes         String?
  contatos            ContatoFornecedor[]
  dados_comercial     DadosComercialFornecedor?
  endereco_fornecedor EnderecoFornecedor?
  produtos            Produto[]

  @@map("fornecedor")
}

model EnderecoFornecedor {
  id           String     @id @default(uuid())
  logradouro   String
  numero       String
  bairro       String
  cidade       String
  pais         String
  cep          String
  fornecedorId String     @unique
  estado       String
  complemento  String?
  fornecedor   Fornecedor @relation(fields: [fornecedorId], references: [id], onDelete: Cascade)

  @@map("endereco_fornecedor")
}

model DadosComercialFornecedor {
  id              String     @id @default(uuid())
  codigo          String?
  prazo_pagamento Int?
  forma_pagamento String?
  banco           String?
  chave_pix       String?
  fornecedorId    String     @unique
  forecedor       Fornecedor @relation(fields: [fornecedorId], references: [id], onDelete: Cascade)

  @@map("dados_comercial_fornecedor")
}

model ContatoFornecedor {
  id           String      @id @default(uuid())
  tipo         String
  valor        String
  fornecedorId String?
  fornecedor   Fornecedor? @relation(fields: [fornecedorId], references: [id])

  @@map("contato_fornecedor")
}

model Sequencia {
  id      String @id @default(uuid())
  nome    String @unique
  proximo Int

  @@map("sequencia")
}

enum TipoEntrada {
  CARTAO
  DINHEIRO
  PIX
  TRANSFERENCIA
}
